pipeline {
    agent any

    tools {
        maven "Maven-3.9.9" // 确保这里使用的是你在 Jenkins 中配置的 Maven 名称
    }

    environment {
        DOCKER_CREDENTIALS = '/usr/local/bin/docker-credential-desktop'
        DOCKER_PATH = '/usr/local/bin/docker'  // 指定 Docker 的完整路径
        DOCKER_HUB_CREDENTIALS = credentials('dockerhub_credentials')  // 使用 Docker Hub 凭据
        DOCKER_IMAGE = 'wangzhiya/teddy'  // 替换为你的 Docker Hub 用户名和镜像名称
        DOCKER_TAG = "${env.BUILD_NUMBER}"  // 使用构建号作为 Docker 镜像标签
        DOCKER_CONFIG_DIR = "/tmp/.docker"  // 自定义 Docker 配置目录路径
    }
    
    stages {
        // Checkout the GitHub repository
        stage('Build') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']], 
                    extensions: [], 
                    userRemoteConfigs: [[url: 'https://github.com/chlorophyllnot/Teedy_local1.git']]  // 你的 GitHub 仓库地址
                )
                sh 'mvn -B -DskipTests clean package'
            }
        }

        // Build the Docker image
        stage('Building image') {
            steps {
                script {
                    // 使用完整路径来执行 Docker 命令
                    sh "${DOCKER_PATH} build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."
                }
            }
        }

        // Upload Docker image to Docker Hub
        stage('Upload image') {
            steps {
                script {
                         // 使用指定的 Docker 配置路径登录 Docker Hub
                    sh """
                    mkdir -p ${DOCKER_CONFIG_DIR}  # 创建自定义 Docker 配置目录
                    echo \${DOCKER_HUB_CREDENTIALS_PSW} | ${DOCKER_PATH} login -u \${DOCKER_HUB_CREDENTIALS_USR} --password-stdin --config ${DOCKER_CONFIG_DIR} https://registry.hub.docker.com
                    """


                  
                        // 推送 Docker 镜像 使用完整路径
                        sh "${DOCKER_PATH} push ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"

                        // 可选：推送 latest 标签 使用完整路径
                        sh "${DOCKER_PATH} push ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} latest"
                    
                }
            }
        }

        // Run Docker containers
        stage('Run containers') {
            steps {
                script {
// 使用完整路径来停止并删除已经存在的容器（如果有）
                    sh "${DOCKER_PATH} stop teedy-container-8081 || true"
                    sh "${DOCKER_PATH} rm teedy-container-8081 || true"
                    // 使用完整路径运行 Docker 容器
                    sh "${DOCKER_PATH} run --name teedy-container-8081 -d -p 8081:8080 ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"

                    // 可选：列出所有 teedy-container 容器 使用完整路径
                    sh "${DOCKER_PATH} ps --filter 'name=teedy-container'"
                   
                }
            }
        }
    }
}
